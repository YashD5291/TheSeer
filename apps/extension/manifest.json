{
  "manifest_version": 3,
  "name": "The Seer - AI Resume Tailor",
  "version": "0.2.0",
  "description": "Analyze job postings and generate tailored resume PDFs in one click.",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "tabs",
    "scripting",
    "notifications",
    "alarms",
    "nativeMessaging"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "css": ["content.css"],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": ["*://claude.ai/*"],
      "js": ["dist/claude-hook.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
